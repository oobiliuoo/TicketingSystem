<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingLeft="20dp"
    android:paddingTop="10dp"
    android:paddingRight="20dp">

    <ImageView
        android:id="@+id/hll_iv"
        android:layout_width="120dp"
        android:layout_height="98dp"
        android:background="@color/gray"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <TextView
        android:id="@+id/hll_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="入区购票"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintLeft_toRightOf="@id/hll_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hll_tv_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:background="@color/pink1"
        android:text="AAAAA"
        android:textColor="@color/pink2"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/hll_iv"
        app:layout_constraintTop_toBottomOf="@id/hll_tv_name" />

    <TextView
        android:id="@+id/hll_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:text="开放时间: 07:00-22:00"
        android:textColor="@color/gray2"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/hll_iv"
        app:layout_constraintTop_toBottomOf="@id/hll_tv_level" />

    <TextView
        android:id="@+id/hll_tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:text="免费"
        android:textColor="@color/teal_700"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/hll_btn_buy"
        app:layout_constraintBottom_toTopOf="@id/hll_tv_time"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="￥"
        android:textColor="@color/teal_700"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/hll_tv_money"
        app:layout_constraintBottom_toTopOf="@id/hll_tv_time"
        />

    <Button
        android:id="@+id/hll_btn_look"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:text="景区预览"
        android:textSize="10sp"
        android:textColor="@color/green1"
        android:background="@drawable/btn_look"
        app:layout_constraintBottom_toBottomOf="@id/hll_iv"
        app:layout_constraintLeft_toRightOf="@id/hll_iv"
        app:layout_constraintTop_toBottomOf="@id/hll_tv_time" />

    <Button
        android:id="@+id/hll_btn_buy"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:text="立即购票"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:background="@drawable/btn_buy"
        app:layout_constraintBottom_toBottomOf="@id/hll_iv"
        app:layout_constraintLeft_toRightOf="@id/hll_btn_look"
        app:layout_constraintTop_toBottomOf="@id/hll_tv_time" />

</androidx.constraintlayout.widget.ConstraintLayout>