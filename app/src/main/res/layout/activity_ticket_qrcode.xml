<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.TicketQRCodeActivity">


    <ImageView
        android:id="@+id/qrcode_iv_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/green1"
        app:layout_constraintBottom_toTopOf="@id/qrcode_iv_2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="3" />

    <ImageButton
        android:id="@+id/qrcode_ibtn_back"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_marginLeft="10dp"
        android:background="#80e0e0e0"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_arrow_left_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <ImageView
        android:id="@+id/qrcode_iv_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/GhostWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/qrcode_iv_1"
        app:layout_constraintVertical_weight="6" />

    <ImageView
        android:id="@+id/qrcode_iv_3"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_qr_code_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/qrcode_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高椅邻景区"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintLeft_toRightOf="@id/qrcode_iv_3"
        app:layout_constraintTop_toTopOf="@id/qrcode_iv_3" />

    <TextView
        android:id="@+id/qrcode_tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用时间："
        android:textColor="@color/GhostWhite"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/qrcode_iv_3"
        app:layout_constraintTop_toBottomOf="@id/qrcode_tv_name" />

    <TextView
        android:id="@+id/qrcode_tv_workTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021-09-22"
        android:textColor="@color/GhostWhite"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/qrcode_iv_3"
        app:layout_constraintTop_toBottomOf="@id/qrcode_tv_1" />

    <ImageView
        android:id="@+id/qrcode_iv_4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="100dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <TextView
        android:id="@+id/qrcode_tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仅在预定时间内生效\n        出示二维码"
        android:textColor="@color/front_black"
        app:layout_constraintBottom_toBottomOf="@id/qrcode_iv_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/qrcode_iv_4"
        app:layout_constraintRight_toRightOf="@id/qrcode_iv_4"
        app:layout_constraintTop_toTopOf="@id/qrcode_iv_4"
        app:layout_constraintVertical_bias="0.08" />

    <ImageView
        android:id="@+id/qrcode_iv_qrcode"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_qr_code_24"
        android:textColor="@color/front_black"
        app:layout_constraintBottom_toBottomOf="@id/qrcode_iv_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/qrcode_iv_4"
        app:layout_constraintRight_toRightOf="@id/qrcode_iv_4"
        app:layout_constraintTop_toTopOf="@id/qrcode_iv_4"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/qrcode_iv_5"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:src="@color/GhostWhite"
        app:layout_constraintBottom_toBottomOf="@id/qrcode_iv_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="@id/qrcode_iv_4"
        app:layout_constraintRight_toRightOf="@id/qrcode_iv_4"
        app:layout_constraintTop_toTopOf="@id/qrcode_iv_4"
        app:layout_constraintVertical_bias="0.6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/qrcode_iv_4"
        app:layout_constraintLeft_toLeftOf="@id/qrcode_iv_4"
        app:layout_constraintTop_toBottomOf="@id/qrcode_iv_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="购票人"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qrcode_tv_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="飞轮海"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="联系电话"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qrcode_tv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="17573911164"
                android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="票据类型"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qrcode_tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="成人票"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="人数"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qrcode_tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="1"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="门票状态"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qrcode_tv_statue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="可使用"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:text="合计"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/qrcode_tv_sumPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="100"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text=" 元"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/qrcode_btn_quitTicket"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_look"
        android:text="退票"
        android:textColor="@color/teal_700"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95" />


</androidx.constraintlayout.widget.ConstraintLayout>